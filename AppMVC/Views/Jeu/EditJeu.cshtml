@using AppMVC.Models
@model JeuViewModel

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Jeu</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nom)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Nom)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Datedesortie)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Datedesortie)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Genre)
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdEditeur", new SelectList(ViewBag.Editeurs, "Value", "Text"))
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Genre)
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdGenre", new SelectList(ViewBag.Genres, "Value", "Text"))
        </div>


        <input type="submit" value="Créer le jeu" />
    </fieldset>
}
