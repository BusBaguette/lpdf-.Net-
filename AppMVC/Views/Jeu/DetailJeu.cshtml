@using AppMVC.Models
@model JeuViewModel

<div class="card m-3 shadow">
    <div class="card-body">
        <h5 class="card-title">Jeu</h5>
        <p id="nomJeu" class="card-text">@Model.Nom</p>
        <p id="descriptionJeu" class="card-text">@Model.Description</p>
        <p id="dateJeu" class="card-text">@Model.Datedesortie</p>
    </div>

    <div class="card-body">
        <h5 class="card-title">Editeur</h5>
        <p id="nomEditeur" class="card-text">@Model.Editeur.Nom</p>
    </div>

    <div class="card-body">
        <h5 class="card-title">Genre</h5>
        <p id="nomGenre" class="card-text">@Model.Genre.Nom</p>
    </div>
</div>
