@using AppMVC.Models
@model EvaluationViewModel

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Evaluation</legend>

        @Html.HiddenFor(model => model.IdJeu)

        <div class="editor-label">
            @Html.LabelFor(model => model.NomEvaluateur)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.NomEvaluateur)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Note)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Note)
        </div>


        <input class="btn btn-success mt-3" type="submit" value="Créer l'évaluation" />
    </fieldset>
}
